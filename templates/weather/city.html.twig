{% extends 'base.html.twig' %}

{% block title %}Weather in {{ city.getCityName }}, {{ city.getCountryName }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ city.getCityName }}, {{ city.getCountryName }}</h1>

    <ul>
       {% for w in weather %}
            <li>{{ w.date|date('d.m.Y') }}: {{ w.temperature }}&deg;C</li>

       {% endfor %}
    </ul>
</div>
{% endblock %}