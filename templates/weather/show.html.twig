{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather.temperature }}</td>
            </tr>
            <tr>
                <th>Image_id</th>
                <td>{{ weather.imageId }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ weather.time ? weather.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature_feel</th>
                <td>{{ weather.temperatureFeel }}</td>
            </tr>
            <tr>
                <th>Sunrise</th>
                <td>{{ weather.sunrise ? weather.sunrise|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Sunset</th>
                <td>{{ weather.sunset ? weather.sunset|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ weather.windSpeed }}</td>
            </tr>
            <tr>
                <th>Precipitation</th>
                <td>{{ weather.precipitation }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ weather.humidity }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather.pressure }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_index') }}">back to list</a>

    {% if is_granted('ROLE_WEATHER_EDIT') %}
        <a href="{{ path('app_weather_edit', {'id': weather.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_WEATHER_DELETE') %}
        {{ include('weather/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
