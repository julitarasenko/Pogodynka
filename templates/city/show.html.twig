{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>City_name</th>
                <td>{{ city.cityName }}</td>
            </tr>
            <tr>
                <th>Country_name</th>
                <td>{{ city.countryName }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ city.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ city.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_city_index') }}">back to list</a>

    {% if is_granted('ROLE_CITY_EDIT') %}
        <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_CITY_DELETE') %}
        {{ include('city/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
